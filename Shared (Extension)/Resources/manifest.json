{
  "name": "Dismoi",
  "description": "Amis, media, experts vous informent directement sur les pages web visit√©es. ",
  "version": "3.86.7",
  "manifest_version": 2,
  "icons": {
    "16": "img/logo/16x16.png",
    "48": "img/logo/48x48.png",
    "128": "img/logo/128x128.png"
  },
  "background": {
    "scripts": [
      "/js/browser-polyfill.js",
      "js/background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "exclude_globs": [
        "*.pdf*",
        "*.Pdf*",
        "*.PDF*",
        "*.jpeg*",
        "*.jpg*",
        "*.png*",
        "*.gif*"
      ],
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "*://*.googleusercontent.com/viewer/secure/pdf/*",
        "*://*.cdn.mozilla.net/*",
        "*://*.accounts.firefox.com/*",
        "*://*.addons.mozilla.org/*",
        "*://*.input.mozilla.org/*",
        "*://*.install.mozilla.org/*",
        "*://*.support.mozilla.org/*",
        "*://*.services.mozilla.org/*",
        "*://*.testpilot.firefox.com/*"
      ],
      "js": [
        "js/browser-polyfill.js",
        "js/content.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "img/logo/16x16.png",
      "48": "img/logo/48x48.png",
      "128": "img/logo/128x128.png"
    },
    "default_title": "Dismoi"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "img/*",
    "fonts/*"
  ],
  "content_security_policy": "default-src https://api.dismoi.io; connect-src https://api.dismoi.io https://sentry.io https://stats.lmem.net https://app.posthog.com; script-src 'self'; object-src 'self'; img-src 'self' https://api.dismoi.io data:; font-src 'self' data:; style-src 'unsafe-inline'"
}